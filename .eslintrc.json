{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "prefer-const": "off", // Disable the prefer-const rule
    "@typescript-eslint/no-unused-expressions": "off", // Disable no-unused-expressions rule
    "@typescript-eslint/no-unused-vars": "off", // Disable no-unused-vars rule if needed
    "@typescript-eslint/no-explicit-any": "off", // Example if you also want to disable no-explicit-any
    "react-hooks/exhaustive-deps": "off",
    "no-var": "off",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/ban-ts-comment": ["error", { "ts-ignore": "never" }], // Allow using @ts-ignore
    "jsx-a11y/alt-text": "off", // Disable warning for missing alt prop
    "@typescript-eslint/no-unsafe-function-type": "off", // Allow Function type usage
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
